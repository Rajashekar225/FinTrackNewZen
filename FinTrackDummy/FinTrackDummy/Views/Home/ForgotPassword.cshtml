@{
    Layout = null;
    ViewBag.Title = "Forgot Password";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="overall-container">
        <h2 class="main-header text-center mb-4">FinTrackNewZen</h2>
        <div class="content-container">
            <div class="logo-panel">
                <img src="/images/LogoFinTrackNewZen.jpeg" alt="FinTrackNewZen Logo">
            </div>
            <div class="form-panel">
                <h4 class="text-center mb-4">Forgot Password</h4>
                <form id="forgotPasswordForm">
                    <div class="mb-3">
                        <label for="emailPhone" class="form-label">Email / Phone</label>
                        <input type="text" id="emailPhone" class="form-control" placeholder="Enter a Email/Phone" required />
                    </div>
                    @* <div class="d-grid mb-2">
                        <button type="submit" class="btn btn-primary btn-block">Send OTP</button>
                        
                    </div> *@
                    <div class="d-grid mb-2">
                        <a class="btn btn-primary btn-block" href="@Url.Action("SendOTP", "Home")">Send OTP</a>
                    </div>
                    <p class="text-center mt-3">
                        <a href="@Url.Action("Login", "Home")">Back to Login</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/forgot-password.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>