@{
    Layout = null;
    ViewBag.Title = "Verify OTP";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify OTP</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="overall-container">
        <h2 class="main-header text-center mb-4">FinTrackNewZen</h2>
        <div class="content-container">
            <div class="logo-panel">
                <img src="./images/LogoFinTrackNewZen.jpeg" alt="FinTrackNewZen Logo">
            </div>
            <div class="form-panel">
                <h4 class="text-center mb-4">Verify OTP</h4>
                <form id="verifyOTPForm">
                    <div class="mb-3">
                        <label for="emailPhone" class="form-label">Email / Phone</label>
                        <input type="text" class="form-control" id="emailPhone" value="Ex:mallamma@gmail.com" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="otp" class="form-label">Enter OTP sent to your Email/Phone</label>
                        <input type="text" class="form-control" id="otp" placeholder="OTP" required />
                    </div>
                    <div class="d-grid mb-3">
                <a class="btn btn-submit btn-success" href="@Url.Action("Login", "Home")">Verify OTP</a>
                    </div>
                    <p class="text-center">
                        <a href="@Url.Action("ForgotPassword", "Home")">Resend OTP</a> |
                        <a href="@Url.Action("Login", "Home")">Back to Login</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/verify-otp.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>