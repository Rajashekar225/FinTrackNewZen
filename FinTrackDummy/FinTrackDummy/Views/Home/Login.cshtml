@{
    Layout = null;
    ViewBag.Title = "Login";

}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Error</div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="overall-container">
        <h2 class="main-header text-center mb-4">FinTrackNewZen</h2>
        <div class="content-container">
            <div class="logo-panel">
                <img src="~/images/LogoFinTrackNewZen.jpeg" alt="FinTrackNewZen Logo" />
            </div>
            <div class="form-panel">
                <h4 class="text-center mb-4">Login</h4>

                <form id="loginForm" method="post" action="/Home/Login">
                    <div class="mb-3">
                        <label for="emailPhone" class="form-label">Email/Phone</label>
                        @*                         <input type="text" name="email" id="email" class="form-control" placeholder="Email or Phone" required />
 *@                    
        <input type="text" name="email" id="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">password</label>
                        @*                         <input type="password" name="password" id="password" class="form-control" placeholder="Password" required />
 *@                    
        <input type="password" name="password" id="password" class="form-control" required />
                    </div>

                    <p class="text-center">
                        <a href="@Url.Action("ForgotPassword", "Home")">Forgot Password?</a>
                    </p>
                    <div class="d-grid mb-2">
@*                         <button type="submit" class="btn btn-success">Login</button>
 *@                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

@*     <script src="~/js/login.js"></script>
 *@    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
